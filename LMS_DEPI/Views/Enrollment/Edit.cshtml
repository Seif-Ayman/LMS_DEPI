@model LMS_DEPI.APP.ViewModels.EnrollmentViewModel

@{
    ViewBag.Title = "Edit Enrollment";
}

<div class="container">
    <h2 class="mb-4">Edit Enrollment</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Enrollment</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row mb-3">
                    <label class="col-md-2 col-form-label">Course Name</label>
                    <div class="col-md-10">
                        @Html.DropDownList("CourseId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CourseId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-md-2 col-form-label">Student Name</label>
                    <div class="col-md-10">
                        @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Save" class="btn btn-sm btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>