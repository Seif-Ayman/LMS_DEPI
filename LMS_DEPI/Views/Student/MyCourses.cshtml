@model IEnumerable<LMS_DEPI.Entities.Models.Enrollment>
<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.05);
        }

</style>
<div class="container mt-4">
    <h2 class="text-center mb-4">Your Enrolled Courses</h2>

    <div class="mb-3">
        <button class="btn btn-secondary" onclick="goBack()">Back</button>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center">You are not enrolled in any courses yet.</p>
    }
    else
    {
        <div class="row">
            @foreach (var enrollment in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@enrollment.Course.Title</h5>
                            <p class="card-text">@enrollment.Course.Description</p>
                            <p class="card-text"><strong>Start Date:</strong> @enrollment.Course.StartDate.ToShortDateString()</p>
                            <p class="card-text"><strong>End Date:</strong> @enrollment.Course.EndDate.ToShortDateString()</p>
                        </div>
                        <div class="card-footer text-center">
                            <a asp-action="CourseLessons" asp-route-courseId="@enrollment.CourseId" class="btn btn-info">View Lessons</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
