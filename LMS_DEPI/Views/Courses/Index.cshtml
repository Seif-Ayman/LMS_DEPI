@model IEnumerable<LMS_DEPI.Entities.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<p>
    <a asp-controller="Enrollment" asp-action="Create">Enroll</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().EndDate)
            </th>
            <th>
                Teacher
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => item.StartDate.ToShortDateString()) <!-- Optional: Format the date -->
                </td>
                <td>
                    @Html.DisplayFor(model => item.EndDate.ToShortDateString()) <!-- Optional: Format the date -->
                </td>
                <td>
                    @item.Teacher?.UserName <!-- Display Teacher's username -->
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.Id">UnEnroll</a> |
                    <a asp-controller="CourseResources" asp-action="Index" asp-route-courseId="@item.Id">Resources</a>
                    <a asp-controller="Enrollment" asp-action="Create" asp-route-courseId="@item.Id">Enroll</a> <!-- Add this line -->
                </td>
            </tr>
        }
    </tbody>
</table>
