@model LMS_DEPI.Entities.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<div>
    <h3>Are you sure you want to delete this course?</h3>
    <div>
        <h4>Course Details</h4>
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Start Date
            </dt>
            <dd class="col-sm-10">
                @Model.StartDate.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                End Date
            </dt>
            <dd class="col-sm-10">
                @Model.EndDate.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                Credits
            </dt>
            <dd class="col-sm-10">
                @Model.Credits
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
    <h1>            </h1>
    <p class="text-secondary">Note : You can't delete courses unless no one is enrolled to it, please delete enrollments first.</p>

</div>
