@model LMS_DEPI.APP.ViewModels.LessonViewModel

<div class="container">
    <h1>Add New Lesson for Course ID: @Model.CourseId</h1>

    <form id="lessonForm" asp-action="Create" method="post" onsubmit="return redirectToPdf()">
        @Html.AntiForgeryToken() <!-- Add anti-forgery token for security -->
        <input type="hidden" name="CourseId" value="@Model.CourseId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="DueDate" class="form-label">Due Date</label>
            <input asp-for="DueDate" type="date" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="FilePath" class="form-label">PDF Link</label>
            <input asp-for="FilePath" id="pdfLink" type="url" class="form-control" placeholder="Enter the PDF URL" />
        </div>

        <button type="submit" class="btn btn-primary">Save Lesson</button>
        <a asp-action="Index" asp-controller="Courses" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<script>
    function redirectToPdf() {
        var pdfLink = document.getElementById("pdfLink").value;

        // Check if a valid PDF URL has been entered
        if (pdfLink && pdfLink.startsWith("http")) {
            // After form submission, open the PDF link in a new tab
            window.open(pdfLink, "_blank");
        }

        return true; // Continue form submission
    }
</script>
