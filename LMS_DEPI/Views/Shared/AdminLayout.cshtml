<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        /* Layout styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f6f9;
        }
        .sidebar {
            background-color: #4F75FF;
            color: white;
            min-height: 100vh;
            width: 250px;
            position: fixed;
            padding-top: 20px;
        }
        .sidebar a {
            color: white;
            padding: 15px 20px;
            display: block;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .sidebar a:hover {
            background-color: #6439FF;
        }
        .navbar {
            background-color: #6439FF;
            padding-left: 270px; /* Align with sidebar */
            position: fixed;
            width: 100%;
            z-index: 1;
        }
        .content-wrapper {
            margin-left: 270px;
            padding: 20px;
            margin-top: 70px;
        }
        footer {
            background-color: #4F75FF;
            color: white;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: calc(100% - 250px);
            margin-left: 250px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2 class="text-center">Admin Panel</h2>
        <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
        <a href="@Url.Action("ManageUsers", "Admin")">Manage Users</a>
        <a href="@Url.Action("ManageRoles", "Admin")">Manage Roles</a>
        <a href="@Url.Action("ManageContent", "Admin")">Manage Content</a>
        <a href="@Url.Action("Settings", "Admin")">Settings</a>
        <a href="@Url.Action("Logout", "Account")">Logout</a>
    </div>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin Dashboard</a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Notifications</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="content-wrapper">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 EduCube Admin Panel</p>
    </footer>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
