@model IEnumerable<LMS_DEPI.Entities.Models.Enrollment>

<div class="container mt-4">
    <h2 class="text-center mb-4">Your Enrolled Courses</h2>

    <div class="mb-3">
        <button class="btn btn-secondary" onclick="goBack()">Back</button>
    </div>

    @if (!Model.Any())
    {
        <p class="text-center">You are not enrolled in any courses yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Course Title</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enrollment in Model)
                    {
                        <tr>
                            <td>@enrollment.Course.Title</td>
                            <td>@enrollment.Course.Description</td>
                            <td>@enrollment.Course.StartDate.ToShortDateString()</td>
                            <td>@enrollment.Course.EndDate.ToShortDateString()</td>
                            <td>
                                <a asp-action="CourseLessons" asp-route-courseId="@enrollment.CourseId" class="btn btn-info">View Lessons</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>
