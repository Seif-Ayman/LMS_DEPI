@model LMS_DEPI.Entities.Models.Lesson

@{
    ViewBag.Title = "Delete Lesson";
}

<h2>Delete Lesson</h2>

<h3>Are you sure you want to delete this lesson?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" /> <!-- Hidden field for Lesson ID -->

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
</form>
