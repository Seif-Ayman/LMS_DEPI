@model LMS_DEPI.Entities.Models.Course

@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

<p>
    <strong>Description:</strong> @Model.Description <br />
    <strong>Start Date:</strong> @Model.StartDate.ToShortDateString() <br />
    <strong>End Date:</strong> @Model.EndDate.ToShortDateString() <br />
</p>

<h3>Lessons</h3>
@if (Model.Lessons != null && Model.Lessons.Any())
{
    <ul>
        @foreach (var lesson in Model.Lessons)
        {
            <li>@lesson.Title - @lesson.Description</li>
        }
    </ul>
}
else
{
    <p>No lessons available for this course.</p>
}

<h3>Quizzes</h3>
@if (Model.Quizzes != null && Model.Quizzes.Any())
{
    <ul>
        @foreach (var quiz in Model.Quizzes)
        {
            <li>@quiz.Title - Due Date: @quiz.DueDate.ToShortDateString()</li>
        }
    </ul>
}
else
{
    <p>No quizzes available for this course.</p>
}

<a asp-controller="Enrollment" asp-action="Create" asp-route-courseId="@Model.Id">Enroll</a>
