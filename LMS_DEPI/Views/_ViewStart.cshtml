@{
    var userRole = User.IsInRole("Teacher") ? "Teacher" : User.IsInRole("User") ? "User" : User.IsInRole("Admin") ? "Admin" : "Guest"; // or any default role
    if (userRole == "Teacher")
    {
        Layout = "~/Views/Shared/TeacherLayout.cshtml";
    }
    else if (userRole == "User")
    {
        Layout = "~/Views/Shared/StudentLayout.cshtml";
    }
    else if (userRole == "Admin")
    {
        Layout = "~/Views/Shared/AdminLayout.cshtml";
    }
    else 
    {
        Layout = "~/Views/Shared/_Layout.cshtml"; // Optional default layout for other roles
    }

}
