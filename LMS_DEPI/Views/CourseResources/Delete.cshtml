@model LMS_DEPI.Entities.Models.CourseResource

@{
    ViewData["Title"] = "Delete Resource";
}

<h1>Delete Resource</h1>

<div>
    <h3>Are you sure you want to delete this resource?</h3>
    <div>
        <h4>Resource Details</h4>
        <dl class="row">
            <dt class="col-sm-2">Resource Type</dt>
            <dd class="col-sm-10">@Model.ResourceType</dd>
            <dt class="col-sm-2">File Name</dt>
            <dd class="col-sm-10">@Model.FileName</dd>
            <dt class="col-sm-2">File Path</dt>
            <dd class="col-sm-10">@Model.FilePath</dd>
        </dl>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-route-courseId="@ViewBag.CourseId" asp-route-lessonId="@ViewBag.LessonId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
