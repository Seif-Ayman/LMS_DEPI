<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduCube</title>
    <link rel="icon" type="image/x-icon" href="https://i.imgur.com/o1S0bt3.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS_DEPI.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        .fredoka {
            font-family: "Fredoka", sans-serif;
            font-weight: 400;
            font-style: normal;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
/* 
        .main-content {
            padding: 70px 45px;
        } */

        .footer {
            background-color: #f8f9fa; /* Distinctive dark background */
            color: white;
            padding: 20px 0; /* Increased padding for better alignment */
            margin-top: 0px; /* Added margin to give some space */
        }

        .landing {
            text-align: center; /* Centers the text */
            padding: 80px 30px; /* Top/bottom and left/right padding */
            background-image: url('/assets/development-4536630_1280.png'); /* Background image */
            background-size: cover; /* Cover the entire area */
            background-position: center; /* Center the background image */
            color: black; /* Text color */
            min-height: 90vh; /* Minimum height of 90% of viewport height */
            max-height: 100vh; /* Maximum height of 100% of viewport height */
            display: flex; /* Use Flexbox for layout */
            justify-content: center; /* Center child elements horizontally */
            align-items: center; /* Center child elements vertically */
            flex-direction: column; /* Stack children vertically */
            margin-bottom: 20px; /* Bottom margin */
        }

            .landing .text-container {
                background-color: rgba(255, 255, 255, 0.7); /* Semi-transparent white background */
                padding: 20px; /* Padding inside the container */
                border-radius: 10px; /* Adds rounded corners */
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adds a subtle shadow */
                max-width: 600px; /* Limits the text container width */
                color: #333; /* Text color for better readability */
            }

            .landing h1 {
                font-size: 2.5rem; /* Font size for the heading */
                font-weight: 600; /* Font weight for the heading */
                margin-bottom: 20px; /* Space below the heading */
            }

            .landing p {
                font-size: 1.2rem; /* Font size for the paragraph */
            }




        .container {
            min-height: 75vh;
            padding: 40px 15px
        }
            .card {
            margin: 20px 0;
            height: 100%; /* Ensures uniform height */
        }

        .navbar-nav .nav-item .nav-link {
            display: flex; /* Align icon and text in a flex container */
            align-items: center; /* Center them vertically */
            justify-content:space-between;
        }

            .navbar-nav .nav-item .nav-link i {
                margin-right: 8px; /* Add some space between icon and text */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <img src="https://i.imgur.com/o1S0bt3.png" alt="EduCube Logo" style="width: 50px; height: 50px;" />
            <div class="container-fluid">
                <a class="navbar-brand fredoka" asp-area="" asp-controller="Home" asp-action="Index">EduCube</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register"><i class="fas fa-user-plus"></i> Register</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <div class="landing">
            <div class="text-container">
            <h1>Welcome to EduCube</h1>
            <p>Your personalized learning platform to grow your skills and knowledge.</p>
            </div>
        </div>
        <div class="container">
            @RenderBody() <!-- This is where the content of your views will be injected -->
        </div>
    </div>

    <footer class="bg-light-gray footer text-muted text-center">
        <div class="foot-container">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <p>&copy; 2024 EduCube - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="https://github.com" target="_blank" class="btn btn-outline-dark btn-sm me-2">
                        <i class="fab fa-github"></i> GitHub
                    </a>
                    <a href="https://www.facebook.com" target="_blank" class="btn btn-outline-primary btn-sm me-2">
                        <i class="fab fa-facebook-f"></i> Facebook
                    </a>
                    <a href="https://www.twitter.com" target="_blank" class="btn btn-outline-info btn-sm me-2">
                        <i class="fab fa-twitter"></i> Twitter
                    </a>
                    <a href="https://www.linkedin.com" target="_blank" class="btn btn-outline-secondary btn-sm me-2">
                        <i class="fab fa-linkedin-in"></i> LinkedIn
                    </a>
                    <a href="https://www.instagram.com" target="_blank" class="btn btn-outline-danger btn-sm">
                        <i class="fab fa-instagram"></i> Instagram
                    </a>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
