@model IEnumerable<LMS_DEPI.Entities.Models.Lesson>

<h2>Lessons for the Course</h2>

<!-- Back Button -->
<button class="btn btn-secondary mb-3" onclick="window.history.back();">Back</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Release Date</th>
            <th>Resources</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <td>@lesson.Title</td>
                <td>@lesson.Description</td>
                <td>@lesson.ReleaseDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Index" asp-controller="CourseResources" asp-route-lessonId="@lesson.Id" class="btn btn-primary">View Resources</a>
                    <!-- Button to create a new resource -->
                    <a asp-action="Create" asp-controller="CourseResources" asp-route-lessonId="@lesson.Id" class="btn btn-success">Add Resource</a>
                </td>
            </tr>
        }
    </tbody>
</table>
