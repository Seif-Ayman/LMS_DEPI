@model IEnumerable<LMS_DEPI.Entities.Models.Enrollment>

<h2>Your Enrolled Courses</h2>

@if (!Model.Any())
{
    <p>You are not enrolled in any courses yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Course Title</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment.Course.Title</td>
                    <td>@enrollment.Course.Description</td>
                    <td>@enrollment.Course.StartDate.ToShortDateString()</td>
                    <td>@enrollment.Course.EndDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="CourseLessons" asp-route-courseId="@enrollment.CourseId" class="btn btn-info">View Lessons</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
